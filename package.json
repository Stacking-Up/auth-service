    "oas-tools": "^2.1.4",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "axios": "^0.26.0",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "semistandard": "^16.0.1",
    "sinon": "^13.0.1"
  },
  "semistandard": {
    "ignore": [
      "/tests/**"
    ]
  },
  "nyc": {
    "exclude": [
      "tests",
      "server.js"
    ]
  },
  "version": "0.1.0"
